%fieldset
  %legend Skulder (till sektionen)
  %table.datatable
    %thead
      %tr
        %th ID
        %th Beskrivning
        %th Summa (SEK)
        %th Status
        - if can? :modify, Debt
          %th
    %tbody
      - person.debts.each do |debt|
        %tr
          %td= debt.id
          %td= debt.description
          %td.money= currency debt.amount
          %td= t "workflow_state.#{debt.workflow_state}"
          %td
            - if can?(:modify, debt) && debt.cancellable?
              = button_to "Stryk", cancel_debt_path(debt), :method => :put, :confirm => "Är du säker?"
    %tfoot
      %tr
        %td.bold{:colspan => 2} Total
        %td.money= currency person.total_debt_amount
        %td

