%h1= t('.title')
%p= link_to t('.new_purchase'), new_purchase_path

%table
  %thead
    %tr
      %th{:colspan => 3}= t 'actions'
  
  %tbody
    - for purchase in @purchases
      %tr{ :class => cycle(:odd, :even) }
        %td.action= link_to t('show'), purchase
        %td.action= link_to t('edit'), edit_purchase_path(purchase)
        %td.action= link_to t('destroy'), purchase, :confirm => t('are_you_sure'), :method => :delete
